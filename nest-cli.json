{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "public/images/*",
        "watchAssets": true,
        "outDir": "dist/"
      },
      {
        "include": "modules/pdf-make/fonts/*",
        "watchAssets": true,
        "outDir": "dist/"
      }
    ]
  }
}
